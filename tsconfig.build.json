{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["ES2019", "DOM"],
    "module": "nodenext",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "test",
    "example",
    "dist",
  ]
}