    "compilerOptions": {
        "declaration": true,
        "target": "esnext",
        "lib": ["ES2019", "DOM"],
        "module": "nodenext",
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true
